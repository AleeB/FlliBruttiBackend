# ============================================
# VARIABILI D'AMBIENTE - FlliBrutti Backend
# Copia questo file in .env e configura i valori
# ============================================

# === DATABASE ===
DB_ROOT_PASSWORD=your-secure-root-password
DB_USER=fllibrutti
DB_PASSWORD=your-secure-db-password
DB_NAME=FlliBrutti
DB_HOST=db
DB_PORT=3306

# Connection string completa (per produzione)
DATABASE_URL=Server=db;Port=3306;Database=FlliBrutti;User=fllibrutti;Password=your-secure-db-password;

# === JWT ===
JWT_SECRET_KEY=YourSuperSecretKeyForJWTMustBeAtLeast32CharactersLong!
JWT_ISSUER=FlliBrutti.Backend.API
JWT_AUDIENCE=FlliBrutti.Frontend
JWT_ACCESS_HOURS=2
JWT_REFRESH_DAYS=15

# === SECURITY ===
SECURITY_SECRET=YourSecuritySecretForArgon2Hashing

# === DOCKER REGISTRY ===
REGISTRY=ghcr.io
IMAGE_NAME=BruttiPolenta/fllibrutti-backend
TAG=latest

# === ASPNET ===
ASPNETCORE_ENVIRONMENT=Production
